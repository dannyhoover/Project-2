            <h1>Recipes</h1>
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <h2>recipes you can save: </h2>
                        <ul class="list1">
                            {{#each recipes}}
                            {{#unless eaten}}
                            {{> recipes/recipe-block eat=true}}
                            {{/unless}}
                            {{/each}}
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h2>Saved recipes </h2>
                        <ul class="list2">
                            {{#each recipes}}
                            {{#if eaten}}
                            {{> recipes/recipe-block eat=false}}
                            {{/if}}
                            {{/each}}
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h2>Add a new recipe:</h2>
                        <form class="create-form">
                            <div class="form-group">
                                <label for="ca">recipe Name:</label>
                                <input type="text" id="ca" name="name">
                            </div>
                            <div class="form-group">
                                <label for="eaten">Has the new recipe been saved yet?</label><br>
                                <input type="radio" name="eaten" value="1" checked> Yep!<br>
                                <input type="radio" name="eaten" value="0"> Not yet...
                            </div>
                            <button type="submit">Add recipe</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="hero-body">
                <div class="container has-text-centered">
                    <div class="column is-6 is-offset-3">
                        <div class="box">
                            <div class="field is-grouped">
                                <p class="control is-expanded">
